<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/channel_row_expand"
        android:layout_gravity="center_vertical"
        android:layout_width="32dp"
        android:layout_height="32dp"
		android:padding="2dp"
        style="@style/BorderlessButton"
        android:src="@drawable/ic_action_add"/>
	<FrameLayout
		android:layout_width="0dp"
		android:layout_height="36dp"
		android:layout_weight="1">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			>
			<TextView
				android:id="@+id/channel_row_name"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:text="@string/noname"
				android:textSize="@dimen/text_size_small2"
				android:singleLine="true"
				android:textColor="@color/nearblack" />
			<TextView
				android:id="@+id/channel_row_count"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:singleLine="true"
				android:text="(0)"
				android:textSize="@dimen/text_size_small2"
				android:textColor="@android:color/darker_gray" />
		</LinearLayout>
		<TextView
			android:id="@+id/tv_chan_talker"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxWidth="100dp"
			android:singleLine="true"
			android:ellipsize="none"
			android:layout_gravity="center_vertical|right"
			android:gravity="center_vertical"
			android:textColor="@color/dimgray"
			android:background="@drawable/area_bg"
			android:alpha="0.6"
			android:visibility="invisible"
			android:textSize="@dimen/text_size_small3"/>

	</FrameLayout>

	<TextView
		android:visibility="gone"
		android:id="@+id/tv_channel_number"
		android:layout_width="45dp"
		android:layout_height="@dimen/row_height"
		android:singleLine="true"
		android:gravity="center_vertical"
		android:text="#1000"
		android:textSize="@dimen/text_size_small3"
		android:textColor="@android:color/darker_gray" />
	<ImageView
		android:id="@+id/iv_channel_add"
		android:layout_gravity="center_vertical"
		android:layout_width="28dp"
		android:layout_height="28dp"
		android:src="@drawable/add"
		style="@style/BorderlessButton"/>
	<ImageView
		android:id="@+id/iv_channel_location"
		android:layout_gravity="center_vertical"
		android:layout_width="28dp"
		android:layout_height="28dp"
		android:src="@drawable/ic_location"
		android:visibility="gone"
		style="@style/BorderlessButton"/>
	<ImageView
		android:id="@+id/iv_channel_listen"
		android:layout_gravity="center_vertical"
		android:layout_width="28dp"
		android:layout_height="28dp"
		android:src="@drawable/ic_listen_gray"
		style="@style/BorderlessButton"/>
	<ImageView
		android:id="@+id/iv_channel_option"
		android:layout_gravity="center_vertical"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:src="@drawable/ic_channel_option"
		style="@style/BorderlessButton"/>

</LinearLayout>
