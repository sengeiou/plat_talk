<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/iv_perm"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="6dp"
        android:src="@drawable/owner"
        android:visibility="invisible" />
    <FrameLayout
        android:layout_width="36dp"
        android:layout_height="36dp"
        >
        <com.kylindev.totalk.view.CircleImageView
            android:id="@+id/userRowAvatar"
            style="@style/layout_match"
            android:padding="1dp"
            android:src="@drawable/ic_default_avatar" />
        <ImageView
            android:id="@+id/iv_avatar_circle"
            style="@style/layout_match"
            android:visibility="gone"
            android:src="@drawable/ic_avatar_circle" />
    </FrameLayout>

    <TextView
        android:id="@+id/userRowNick"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:singleLine="true"
        android:textSize="@dimen/text_size_small2"
        android:textColor="@color/nearblack" />

    <ImageView
        android:id="@+id/iv_prior_mic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/prior_mic"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_mute"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/mute"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_audio_source"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/audiosource_selector" />

    <TextView
        android:id="@+id/userRowId"
        style="@style/layout_wrap"
        android:gravity="center_vertical"
        android:lines="1"
        android:singleLine="true"
        android:textSize="@dimen/text_size_small3"
        android:textColor="@color/gray_d0" />
    <TextView
        android:layout_width="3dp"
        android:layout_height="@dimen/row_height"/>

</LinearLayout>
