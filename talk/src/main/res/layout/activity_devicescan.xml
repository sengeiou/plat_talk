<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_match"
    android:orientation="vertical"
	android:background="@color/white" >

    <LinearLayout
        style="@style/layout_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/nearblack"
        android:gravity="center_vertical" >
        <ImageView
            android:id="@+id/iv_ds_leave"
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_left"
            style="@style/BorderlessButton"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_height"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/use_accessory"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_middle"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:padding="6dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:gravity="center_vertical"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/area_bg">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_small3"
            android:textColor="@color/text_black"
            android:text="@string/accessory_intro"/>
        <TextView
            android:id="@+id/tv_taobao"
            android:layout_width="50dp"
            android:layout_height="@dimen/row_height"
            android:text="@string/buy"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/app_blue"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/area_bg">
        <LinearLayout
            style="@style/layout_vertical"
            android:layout_weight="1">
            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ble_scan_tip"
                    android:textColor="@color/gray_b0"
                    android:textSize="@dimen/text_size_small3"/>

            </LinearLayout>
            <FrameLayout
                style="@style/layout_horizontal"
                android:layout_weight="2">
                <ImageView
                    android:id="@+id/iv_handmic_circle"
                    style="@style/layout_match"
                    android:scaleType="fitCenter"
                    android:src="@drawable/handmic_connecting"
                    />
                <ImageView
                    android:id="@+id/iv_handmic_scanactivity"
                    style="@style/layout_match"
                    android:padding="15dp"
                    android:src="@drawable/handmic_disconnected"
                    />
            </FrameLayout>
            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <LinearLayout
                    style="@style/layout_vertical"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_app_version_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="model"
                    android:textColor="@color/gray_b0"
                    android:textSize="@dimen/text_size_small3"/>
                <TextView
                    android:id="@+id/tv_handmic_connected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="connected"
                    android:textColor="@color/gray_b0"
                    android:textSize="@dimen/text_size_small3"/>
                <TextView
                    android:id="@+id/tv_handmic_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="model"
                    android:textColor="@color/gray_b0"
                    android:textSize="@dimen/text_size_small3"/>
                <TextView
                    android:id="@+id/tv_handmic_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="version"
                    android:textColor="@color/gray_b0"
                    android:textSize="@dimen/text_size_small3"/>


                <Button
                    android:id="@+id/tv_handmic_lespeedtest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测速"
                    android:textSize="@dimen/text_size_small3"
                    android:visibility="invisible" />/>
                <LinearLayout
                    style="@style/layout_vertical"
                    android:layout_weight="1"
                    />

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_handmic_connection_state"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/device_disc_click_to_reconnect"
            android:textSize="@dimen/text_size_small2"
            android:textColor="@color/text_black"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="4"
        android:layout_margin="3dp"
        android:orientation="vertical"
        android:background="@drawable/area_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/device_list"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_small2"
            android:gravity="center_vertical"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_gray"/>

        <FrameLayout
            style="@style/layout_vertical"
            android:layout_weight="1">
            <ListView
                android:id="@+id/lv_device"
                style="@style/layout_match">
            </ListView>
            <LinearLayout
                android:id="@+id/ll_no_device"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/img_no_device"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/pb_scan"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>

        <Button
            android:id="@+id/btn_scan_ble"
            android:layout_height="@dimen/row_height"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="@string/search_handmic"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            android:background="@drawable/selector_btn"/>
    </LinearLayout>
</LinearLayout>