<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="match_parent" 
	android:layout_height="wrap_content"   
	android:orientation="vertical"
	android:padding="5dp" > 
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="10dp" />

	<EditText
		android:id="@+id/et_search_and_join_channel_pwd"
		android:singleLine="true"
		android:layout_width="match_parent"
		android:layout_height="@dimen/row_height"
		android:maxLength="4"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		android:inputType="number"
		android:textSize="@dimen/text_size_small2"
		android:hint="@string/channel_pwd"
		android:background="@drawable/shape_et_bg" />
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="10dp" />
	<EditText
		android:id="@+id/et_search_and_join_channel_comment"
		android:singleLine="true"
		android:layout_width="match_parent"
		android:layout_height="@dimen/row_height"
		android:maxLength="57"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		android:textSize="@dimen/text_size_small2"
		android:hint="@string/channel_comment"
		android:background="@drawable/shape_et_bg" />
    	<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="10dp" />

</LinearLayout> 